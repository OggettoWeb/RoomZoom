<config>
    <modules>
        <Oggetto_ZoomImage>
            <version>0.1.0</version>
        </Oggetto_ZoomImage>
    </modules>
    <frontend>
        <routers>
            <zoomimage>
                <use>standard</use>
                <args>
                    <module>Oggetto_ZoomImage</module>
                    <frontName>index</frontName>
                </args>
            </zoomimage>
        </routers>
        <layout>
            <updates>
                <zoomimage>
                    <file>zoomimage.xml</file>
                </zoomimage>
            </updates>
        </layout>
          <translate>
            <modules>
                <Oggetto_ZoomImage>
                    <files>
                        <default>Oggetto_ZoomImage.csv</default>
                    </files>
                </Oggetto_ZoomImage>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <zoomimage before="Mage_Adminhtml">Oggetto_ZoomImage_Adminhtml</zoomimage>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <blocks>
            <zoomimage>
                <class>Oggetto_ZoomImage_Block</class>
            </zoomimage>
        </blocks>
        <helpers>
            <zoomimage>
                <class>Oggetto_ZoomImage_Helper</class>
            </zoomimage>
        </helpers>
    </global>
</config>