<?php $firstthumbnail = '<li><a href="' . $this->helper('catalog/image')->init($_product, 'image') .'" rel="zoom-id:Zoomer" rev="' . $this->helper('catalog/image')->init($_product, 'image')->constrainOnly(1)->resize(370) . '" title="' . $this->htmlEscape($this->getLabel()) . '"><img src="'. $this->helper('catalog/image')->init($_product, 'image')->resize(56).'" width="56" height="56"/></a></li>'; ?>
