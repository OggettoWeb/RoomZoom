<layout version="0.1.0">

<!--
Product view
-->
    <catalog_product_view translate="label">
        <label>Catalog Product View (Any)</label>
        <reference name="head">
            <action method="addJs">
                <script>oggetto/roomzoom.js</script>
            </action>
            <action method="addCss">
                <stylesheet>css/roomzoom.css</stylesheet>
            </action>
        </reference>
    </catalog_product_view>

    <quicklook_product_view translate="label">
        <label>Catalog Product View (Any)</label>
        <reference name="head">
            <action method="addJs">
                <script>oggetto/roomzoom.js</script>
            </action>
            <action method="addCss">
                <stylesheet>css/roomzoom.css</stylesheet>
            </action>
        </reference>
    </quicklook_product_view>

</layout>
